{
  "extends": "@dcl/eslint-config/sdk",
  "plugins": ["import"],
  "parserOptions": {
    "project": ["tsconfig.json", "test/tsconfig.json", "tsconfig.scripts.json"]
  },
  "ignorePatterns": [
    "dist/",
    "coverage/",
    "*.js",
    "*.d.ts",
    "*.json",
    "!.eslintrc.json"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "tabWidth": 2
      }
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}
